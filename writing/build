#!/bin/sh

pandoc proposal.md -o proposal.html

echo made proposal html

pandoc proposal.md -o proposal.pdf

echo made proposal pdf

./all_main | pandoc -f markdown+autolink_bare_uris --toc --default-image-extension=png --number-sections --bibliography=bibliography.json | tidy -i > main.html

echo made main html

./all_main | pandoc -f markdown+autolink_bare_uris --toc --default-image-extension=png --number-sections --bibliography=bibliography.json --template=mainOboeTemplate -o main.pdf

echo made main pdf

wc -w main/*.md
wc -w proposal.md




