#!/bin/sh

cd main
ls | sort | xargs cat > ../main_concat.md

cd ..

pandoc main_concat.md --toc --default-image-extension=png --number-sections -o main.html
pandoc main_concat.md --toc --default-image-extension=png --number-sections --template=mainOboeTemplate -o main.pdf

pandoc proposal.md -o proposal.html
pandoc proposal.md -o proposal.pdf

echo "word count:" `wc -w main.md`



